<div class="slab slab--white">
<div class="grid">
  <div class="grid__item width-five-sixths shift-one-twelfth">


    <div class="form-card">
      <div class="emoji emoji-size-95 emoji--clipboard">
      </div>
      <br>
      <br>
      <h2 style="font-size: 35px;">Submitted Applications</h2>

      <div class="honeycrisp-compact">
        <table class="data-table">
          <thead>
          <tr>
            <th>App Number</th>
            <th>Date submitted</th>
            <th>Applicant</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @benefits_apps.each do |app| %>
            <tr>
              <td><%=link_to app.id, app %></td>
              <td><% if app.date_of_submission %>
                  <%= app.date_of_submission.strftime("%m/%d/%Y")%>
                <%end%>
              </td>
              <td><% app.members.each do |member| %>
                  <% if member.primary_member %>
                    <%= member.first_name %>
                    <%= member.last_name %>
                  <% end %>
                  <% app.incomes.each do |income| %>
                  <% income.pay_period %>
                  <%end %>
                <% end %>
              </td>
              <td><%= link_to "Edit", edit_benefits_app_path(app) %>
                <%= link_to "Delete", benefits_app_path(app), data: {turbo_method: :delete} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <br>
      </div>
      <%= link_to "New Application", new_benefits_app_path, class: "button button--big button--primary"%>
    </div>
  </div>
</div>
</div>
<%#= form_with model: @benefits_apps do |form| %>
<%#= form.label :address %>
<%#= form.text_field :address %>
<!--  <div>-->
<%#= form.submit "New Application"%>
<!--  </div>-->
<%# end %>
