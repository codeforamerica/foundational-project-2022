<h1>Tell us about yourself</h1>

<%= form_with(model: @member, url: [ @benefits_app, @member ]) do |form| %>
  <div>
    <% if @member.errors.any? %>
      <ul>
        <% @member.errors.messages_for(:first_name).each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <p>
      <%= form.label :first_name %><br>
      <%= form.text_field :first_name %>
    </p>
    <% if @member.errors.any? %>
      <ul>
        <% @member.errors.messages_for(:last_name).each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <p>
      <%= form.label :last_name %><br>
      <%= form.text_field :last_name %>
    </p>
    <% if @member.errors.any? %>
      <ul>
        <% @member.errors.messages_for(:birthdate).each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <p>
      <%= form.label :birthdate %><br>
      <%= form.text_field :birthdate %>
    </p>

    <%= form.submit "Submit"%>
  </div>
<% end %>


